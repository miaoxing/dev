#!/bin/bash

set -e

if [[ -d "../../packages/miaoxing-dev" ]]; then
  vendorDir="../../vendor"
  defaultConfig="../../packages/miaoxing-dev/phpmd-for-plugin.xml"
else
  vendorDir="vendor"
  defaultConfig="vendor/miaoxing/dev/phpmd.xml"
fi

if [[ -e "phpmd.xml" ]]; then
  config="phpmd.xml"
else
  config=${defaultConfig}
fi

exist_dirs=()
# resources dir is deprecatedï¼Œwill remove in v4
dirs=('config' 'src' 'stubs' 'tests' 'views' 'resources')
for dir in ${dirs[@]}; do
  if [[ -d ${dir} ]]; then
    exist_dirs+=(${dir})
  fi
done
dir_arg=$(
  IFS=,
  echo "${exist_dirs[*]}"
)

echo "Check in ${dir_arg}"

${vendorDir}/bin/phpmd ${dir_arg} ansi ${config} "$@"
